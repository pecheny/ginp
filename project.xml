<?xml version="1.0" encoding="utf-8"?>
<project>
   <set name="builds_folder" value="."/>
   <set name="builds_folder" value="/AndroidBuilds" if="android"/>

    <meta title="Game buttons demo" package="com.shoo.ginp" version="1.0.0" company="pecheny"/>
    <app main="InputTest" path="${builds_folder}/Export" file="demo"/>

    <window antialiasing="4"/>
    <window background="#204080" fps="20" width="640" height="160"/>
    <source path="src"/>

    <haxelib name="ginp"/>
    <haxelib name="openfl"/>

    <haxeflag name="-dce" value="full"/>
    <assets path="Assets" include="*"/>
</project>
